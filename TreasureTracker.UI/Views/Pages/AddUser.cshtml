@model UserPostModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!----======== CSS ======== -->
    <link rel="stylesheet" href="../css/Pages.css" />

    <link rel="stylesheet" href="../css/Pages2.css" />

    <!----===== Iconscout CSS ===== -->
    <link rel="stylesheet"
          href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />

    <title>Admin Dashboard Panel Add users</title>
</head>
<body>
    <nav>
        <div class="logo-name">
            <div class="logo-image">
                <img src="../SiteImages/logo.png" alt="" />
            </div>

            <span class="logo_name">Treasure Tracker</span>
        </div>

        <div class="menu-items">
            <ul class="nav-links">
                <li>
                    <a asp-controller="Pages" asp-action="Dashboard">
                        <i class="uil uil-estate"></i>
                        <span class="link-name">Dashboard</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Pages" asp-action="CollectionsList">
                        <i class="uil uil-files-landscapes"></i>
                        <span class="link-name">Collection</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Pages" asp-action="PerCollectionsList">
                        <i class="uil uil-files-landscapes"></i>
                        <span class="link-name">My collection</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Pages" asp-action="UsersList">
                        <i class="uil uil-chart"></i>
                        <span class="link-name">Users</span>
                    </a>
                </li>
            </ul>

            <ul class="logout-mode">
                <li>
                    <a href="#">
                        <i class="uil uil-signout"></i>
                        <span class="link-name">Logout</span>
                    </a>
                </li>

                <li class="mode">
                    <a href="#">
                        <i class="uil uil-moon"></i>
                        <span class="link-name">Dark Mode</span>
                    </a>

                    <div class="mode-toggle">
                        <span class="switch"></span>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <section class="dashboard">
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>

            <div class="search-box">
                <i class="uil uil-search"></i>
                <input type="text" placeholder="Search here..." />
            </div>

            <img src="images/profile.jpg" alt="" />
        </div>

        <div class="dash-content">
            <div class="overview users__title__box">
                <div class="title">
                    <i class="uil uil-tachometer-fast-alt"></i>
                    <span class="text">Add Users</span>
                </div>
            </div>
            <form asp-controller="Pages" asp-action="AddUser" method="post" enctype="multipart/form-data">
                <div class="form__box">
                    <div class="input__box">
                        <label asp-for="FirstName">FirstName</label>
                        <input asp-for="FirstName" type="text" placeholder="Firstname" />
                        <span asp-validation-for="FirstName" class="validation"></span>
                    </div>
                    <div class="input__box">
                        <label asp-for="LastName">LastName</label>
                        <input asp-for="LastName" type="text" placeholder="Lastname" />
                        <span asp-validation-for="LastName" class="validation"></span>
                    </div>
                    <div class="input__box">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" type="text" placeholder="Email" />
                        <span asp-validation-for="Email" class="validation"></span>
                    </div>
                    <div class="input__box">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="text" placeholder="Password" />
                        <span asp-validation-for="Password" class="validation"></span>
                    </div>

                    <div class="add__btn__box">
                        <button class="add__use__btn__box" type="submit">Add user </button>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <script src="../js/Page.js"></script>
</body>
</html>
